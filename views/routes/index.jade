extends ../layouts/default

block main
	h1= title

block content

	h3.muted Sync to:
	ul
		li
			a(href="/sync/sptrans") SPTrans
		li
			a(href="/sync/osm") OpenStreetMap

	- if (routes.length)
		- if (pages > 1)
					ul.pagination
						!= createPagination(pages, page)

		h3 Routes
		table.table
			thead
				tr
					th NÃºmero
					th Destino
					th No OSM?
			tbody
				- each route in routes
					tr
						td
							p
								a(href='routes/#{route._id}') #{route.ref}
						td
							p
								a(href='routes/#{route._id}') #{route.to}
						td
							p 
								x
	- else
